<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        style="@style/linearDefault"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/info_imageThietBiCTSD"
            style="@style/imageCardView"
            android:background="@android:color/white"
            android:scaleType="fitXY"
            android:src="@drawable/choosepicture" />

        <LinearLayout
            android:layout_weight="10"
            style="@style/linearDefault"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_maPhongCTSD"
                style="@style/textViewCardView"
                android:text="TEST" />


            <TextView
                android:id="@+id/info_ngayCTSD"
                style="@style/textViewCardView"
                android:text="TEST" />
            <TextView
                android:id="@+id/info_soLuong"
                style="@style/textViewCardView"
                android:text="TEST" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/info_detail"
            android:src="@drawable/view_list"/>



    </LinearLayout>


</android.support.v7.widget.CardView>